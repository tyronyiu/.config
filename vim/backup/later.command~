# The array should have two fields, the title [0] and the description [1].
echo -n "Enter the title > "
read title
echo -n "Enter the description/link > "
read description
#for index in "${!array[@]}"
# do
#     echo "$index ${array[index]}"
# done
echo "$title"
echo "$description"
osascript -- - "$title" "$description" <<'EOF'
  on run(argv)
    tell application "Reminders"                                                                                                  
        make new reminder with properties {name:item 1 of argv, body:item 2 of argv}                                             
    end tell     
  end
EOF

     display: 'flex',
      paddingLeft: '2em',
      paddingRight: '2em',
 [theme.breakpoints.down('sm')]: {
     display: 'block',
      padding: '1em',
    },
  },
}));

export default function PaperCard(props) {
  const classes = useStyles();
      if (props.no == 1) {
  return (
    <div className={classes.root}>
        <WhatCard />
        <FeaturesCard />
              </div>
  )
      }
      else if (props.no == 2) {
  return (
    <div className={classes.root}>
        <AdditionalCard />
              </div>
  )
      }
}
